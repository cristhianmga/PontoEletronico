@model PontoEletronico.Models.DTO.MinhaEmpresaDto
@{
    var parms = new Dictionary<string, string>
    {
        {"EmpresaId",Model.Id.ToString()}
    };
    ViewData["Title"] = "MinhaEmpresa";
}

<h1>@Model.RazaoSocial</h1>
<p>
    <a asp-action="AddFuncionarioEmpresa" asp-controller="Funcionario" asp-all-route-data="parms" class="btn btn-primary">Adicionar Novo Funcionário</a>
</p>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                CPF
            </th>
            <th>
                Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Funcionarios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a class="btn" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

